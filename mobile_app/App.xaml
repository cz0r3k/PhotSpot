    <Application.Resources>
        <ResourceDictionary>
            <!-- Kolory -->
            <Color x:Key="PrimaryColor">#32a6a8</Color>
            <Color x:Key="ForegroundColor">White</Color>

            <!-- Styl TabBar -->
            <Style TargetType="TabBar">
                <Setter Property="Shell.BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="Shell.ForegroundColor" Value="{StaticResource ForegroundColor}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
